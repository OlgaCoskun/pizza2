<h2>Welcome to PizzaShop!</h2>

<div class="row">
    <% @products.each do |p| %>
    <div class="col-md-3">
        <div>
            <%= p.title %>
        </div>

        <div>

           <img src="<%= p.path_to_image %>">
        </div>

        <div>
            <%= p.description %>
        </div>

        <div>
            <%= p.size %> sm
        </div>

        <div>
            <%= p.price %> rub
        </div>

    </div>
    <% end %>
</div>
